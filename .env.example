# Copy this file to .env and add your actual Azure OpenAI credentials

# Azure OpenAI Configuration (global defaults)
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-10-21

# Optional: Per-service overrides (use if your deployments are in different resources/regions)
# If set, these take precedence over the global values above for the respective service.
# Chat (GPT-4.x / GPT-35)
AZURE_OPENAI_CHAT_API_KEY=
AZURE_OPENAI_CHAT_ENDPOINT=
AZURE_OPENAI_CHAT_API_VERSION=

# Whisper (Speech-to-Text)
AZURE_OPENAI_WHISPER_API_KEY=
AZURE_OPENAI_WHISPER_ENDPOINT=
AZURE_OPENAI_WHISPER_API_VERSION=

# TTS (Text-to-Speech)
AZURE_OPENAI_TTS_API_KEY=
AZURE_OPENAI_TTS_ENDPOINT=
AZURE_OPENAI_TTS_API_VERSION=

# Azure OpenAI Deployment Names (from Azure OpenAI Studio â†’ Deployments)
AZURE_OPENAI_CHAT_DEPLOYMENT=
AZURE_OPENAI_WHISPER_DEPLOYMENT=
AZURE_OPENAI_TTS_DEPLOYMENT=
